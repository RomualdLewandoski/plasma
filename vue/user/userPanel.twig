<div class="container-fluid">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark mb-4">{{ translate("SHOW_PLAYER") }} - <small>{{ user.userName }}</small></h3>
    </div>

    <div class="row mb-3">
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="text-primary fw-bold m-0">{{ translate("INFO") }}</h6>
                </div>
                <div class="card-body">
                    <h4 class="small fw-bold">{{ translate("PSEUDO") }}<span
                                class="float-end">{{ user.userName }}</span></h4>
                    <h4 class="small fw-bold">{{ translate("LAST_SEEN") }}<span
                                class="float-end">{{ user.lastSeen }}</span></h4>
                    <h4 class="small fw-bold">{{ translate("REGISTER_AT") }}<span
                                class="float-end">{{ user.register }}</span></h4>
                    <h4 class="small fw-bold">{{ translate("LAST_IP") }}<span class="float-end">{{ user.lastIP }}</span>
                    </h4>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="text-primary fw-bold m-0">{{ translate("QUICK_ACTION") }}</h6>
                </div>
                <div class="card-body text-center">
                    <a href="{{ path("user_edit", [user.id]) }}" class="btn btn-primary btn-sm"><i
                                class="fas fa-user-edit"></i> {{ translate("EDIT") }}</a>
                    <a href="#" class="btn btn-warning btn-sm" id="addToTicket"><i
                                class="fa fa-ticket"></i> {{ translate("ADD_TO_TICKET") }}</a>
                    <a href="#" class="btn btn-danger btn-sm" id="addSanctionTrigger"><i
                                class="fas fa-hammer"></i> {{ translate("SANCTION") }}</a>
                </div>
            </div>
        </div>
        <div class="col-lg-8">

            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 fw-bold">{{ translate("USER_HIST") }}</p>
                        </div>
                        <div class="card-body">
                            <nav>
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <button class="nav-link active" id="nav-pending-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-pending" type="button" role="tab"
                                            aria-controls="nav-pending"
                                            aria-selected="true">
                                        {{ translate("PENDING_TICKETS") }}
                                    </button>
                                    <button class="nav-link" id="nav-previous-tickets-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-previous-tickets" type="button" role="tab"
                                            aria-controls="nav-previous-tickets" aria-selected="false">
                                        {{ translate("TICKET_HISTORY") }}
                                    </button>
                                    <button class="nav-link" id="nav-previous-tickets-target-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-previous-tickets-target" type="button" role="tab"
                                            aria-controls="nav-previous-tickets-target" aria-selected="false">
                                        {{ translate("TICKET_HISTORY_TARGET") }}
                                    </button>
                                    <button class="nav-link" id="nav-sanction-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-sanction" type="button" role="tab"
                                            aria-controls="nav-sanction" aria-selected="false">
                                        {{ translate("SANCTION_HISTORY") }}
                                    </button>
                                    <button class="nav-link" id="nav-sanction-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-death" type="button" role="tab"
                                            aria-controls="nav-sanction" aria-selected="false">
                                        {{ translate("DEATH_HISTORY") }}
                                    </button>
                                </div>
                            </nav>
                            <div class="tab-content mt-3 table-responsive" id="nav-tabContent">
                                <div class="tab-pane fade show active" id="nav-pending" role="tabpanel"
                                     aria-labelledby="nav-pending-tab">
                                    <table class="table " id="openedTickets">
                                        <thead>
                                        <th>Id</th>
                                        <th>{{ translate("TARGET") }}</th>
                                        <th>{{ translate("SERVER") }}</th>
                                        <th>{{ translate("DATE") }}</th>
                                        <th>{{ translate("ACTIONS") }}</th>
                                        </thead>
                                        <tbody>

                                        </tbody>
                                    </table>

                                </div>
                                <div class="tab-pane fade table-responsive" id="nav-previous-tickets" role="tabpanel"
                                     aria-labelledby="nav-previous-tickets-tab">

                                    <table class="table" id="ticketsHistory">
                                        <thead>
                                        <th>Id</th>
                                        <th>{{ translate("TARGET") }}</th>
                                        <th>{{ translate("SERVER") }}</th>
                                        <th>{{ translate("DATE") }}</th>
                                        <th>{{ translate("ACTIONS") }}</th>
                                        </thead>
                                        <tbody>

                                        </tbody>
                                    </table>


                                </div>

                                <div class="tab-pane fade table-responsive" id="nav-previous-tickets-target"
                                     role="tabpanel"
                                     aria-labelledby="nav-previous-tickets-target-tab">

                                    <table class="table" id="ticketsTargetHistory">
                                        <thead>
                                        <th>Id</th>
                                        <th>{{ translate("TARGET") }}</th>
                                        <th>{{ translate("SERVER") }}</th>
                                        <th>{{ translate("DATE") }}</th>
                                        <th>{{ translate("ACTIONS") }}</th>
                                        </thead>
                                        <tbody id="ticketTargetBody">

                                        </tbody>
                                    </table>


                                </div>
                                <div class="tab-pane fade table-responsive" id="nav-sanction" role="tabpanel"
                                     aria-labelledby="nav-sanction-tab">
                                    <table class="table " id="sanctionsHistory">
                                        <thead>
                                        <th>Id</th>
                                        <th>{{ translate("TYPE") }}</th>
                                        <th>{{ translate("SERVER") }}</th>
                                        <th>{{ translate("DATE") }}</th>
                                        <th>{{ translate("ACTIONS") }}</th>
                                        </thead>
                                        <tbody id="sanctionHistoryBody">

                                        </tbody>
                                    </table>

                                </div>
                                <div class="tab-pane fade table-responsive" id="nav-death" role="tabpanel"
                                     aria-labelledby="nav-sanction-tab">
                                    <table class="table " id="deathHistory">
                                        <thead>
                                        <th>{{ translate("ID") }}</th>
                                        <th>{{ translate("DATE") }}</th>
                                        <th>{{ translate("SERVER") }}</th>
                                        <th>{{ translate("REASON") }}</th>
                                        </thead>
                                        <tbody id="sanctionHistoryBody">

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addToTicketUserModal" tabindex="-1" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{ translate("ADD_TO_TICKET") }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="addToTicketUserModalBody">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveAddToTicketsUser">Save changes</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="addSanctionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{ translate("ADD_SANCTION") }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <input type="hidden" value="" id="sanctionValue">
                <div class="modal-body" id="addSanctionModalBody">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveAddSanction">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>